@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>Czy napewno chcesz usunąć konto?</h3>

<div class="alert alert-warning" role="alert">
    <div class="flex-row">
        <div class="d-inline-flex">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                 class="bi bi-exclamation-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z" />
            </svg>
        </div>
        <div class="d-inline-flex">
            <p>
                <strong>Pamiętaj, że:</strong><br />
                &nbsp;- Wraz z kontem usuniesz wszystkie dane.<br />
                &nbsp;- Ta operacja jest nieodwracalna.
            </p>
        </div>
        
    </div>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row justify-content-between">
        @if (Model.RequirePassword)
        {
            <div class="form-floating col-6">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="col-4 btn rounded-pill btn-danger m-2" type="submit">Usuń</button>

        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
